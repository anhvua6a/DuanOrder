<!DOCTYPE html>
<html lang="en">
<head>
    <title>Danh sách nhân viên</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <style>
        .kc_fab_main_btn {
            background-color: #F44336;
            width: 60px;
            height: 60px;
            border-radius: 100%;
            background: #F44336;
            border: none;
            outline: none;
            color: #FFF;
            font-size: 36px;
            position: fixed;
            bottom: 140px;
            right: 120px;
        }

        body{
            background-image: linear-gradient(deepskyblue,lightpink);
            min-height: 100vh;
        }

        @media screen and (min-width: 34em) {
            .card-columns {
                column-count: 1;
            }

        }

        @media screen and (min-width: 62em) {
            .card-columns {
                column-count: 2;
            }

        }

        @media screen and (min-width: 75em) {
            .card-columns {
                column-count: 2;
            }

        }

        #item_User {

            border-radius: 25px;
            background: whitesmoke;
            box-shadow: 5px 5px 5px black;
        }

        #item_User:hover {
            background: deepskyblue;
        }
    </style>
</head>
<body>

<div class="container" style="background-color: wheat; padding-bottom: 10px">

    <!-- Phần header website -->

    <nav class="navbar navbar-expand-sm bg-light navbar-light" style="border-radius: 20px 20px 0px 0px">
        <a class="navbar-brand" href="#"><img src="/images/logo_text.png"
                                              style=" width:150px; height:25px;"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <% if (role == "Admin") { %>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/users">Nhân viên</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/menus">Menu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/tables">Bàn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/bills">Hoá đơn</a>
                    </li>
                </ul>
            <% } %>
            <ul class="navbar-nav ml-auto nav-flex-icons">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        Xin
                        chào, <%= findUser.fullName %> (<%= role %>)
                    </a>
                    <div class="dropdown-menu dropdown-menu-right dropdown-default"
                         aria-labelledby="navbarDropdownMenuLink-333">
                        <% if (role == "Admin") { %>
                            <a class="dropdown-item" href="/users/info/<%= findUser._id %>">Thông tin cá nhân</a>
                        <% } %>
                        <a class="dropdown-item" href="/logout" onclick="return confirm('Bạn có muốn đăng xuất?')">Đăng
                            xuất</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Kết thúc phần menu chính -->
    <div id="myCarousel" class="carousel slide border" data-ride="carousel" style="border-radius: 0px 0px 20px 20px">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-30" style="width:100%; height:350px; border-radius:  0px 0px 20px 20px"
                     src="/images/slider-01.jpg" alt="Leopard">
            </div>
            <div class="carousel-item">
                <img class="d-block w-30" style="width:100%; height:350px; border-radius: 0px 0px 20px 20px"
                     src="/images/slider-02.jpg"
                     alt="Cat">
            </div>
            <div class="carousel-item">
                <img class="d-block w-30" style="width:100%; height:350px; border-radius: 0px 0px 20px 20px"
                     src="/images/slider-03.jpg" alt="Lion">
            </div>
        </div>
        <!-- Controls -->
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- Kết thúc phần menu chính -->

    <!-- Phần nội dung chính -->

    <main class="container">
        <div class="page-section">
            <h1 class="page-title">Hoá đơn chi tiết</h1>
        </div>
        <div class="jumbotron">
            <h1 class="display-6">Mã hoá đơn: <%= bills.billCode %></h1>
            <h3 class="display-6">Ngày giờ: <%= bills.dateBill %></h3>
            <h3 class="display-6">Nhân viên: <%= bills.nameOrder %></h3>
            <h3 class="display-6">Thu ngân: <%= bills.nameCashier %></h3>
            <h3 class="display-6">Số bàn: <%= bills.tableCode %></h3>
            <h3 class="display-6" style="color: #00B7FF">Tổng giá: <%= bills.totalPrice %></h3>
            <h3 class="display-6" style="color: green">Trạng thái: <%= bills.status %></h3>
            <table class="table table-stripped">
                <thead align="center">
                <th>Tên món ăn</th>
                <th width="70">Ảnh</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Tổng</th>
                </thead>
                <tbody align="center">
                <% for(let i = 0; i < billones.length; i++){ %>
                    <tr>
                        <td><%= billones[i].name %></td>
                        <td>
                            <img src="<%= billones[i].image %>" class="img-fluid">
                        </td>
                        <td><%= billones[i].sl %></td>
                        <td><%= billones[i].price %></td>
                        <td><%= billones[i].totalMoney %></td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </main>


    <!-- Kết thúc phần nội dung chính -->


</div>
</body>
</html>


